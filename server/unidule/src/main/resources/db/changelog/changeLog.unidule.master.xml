<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="00000000000000" author="Unidule" failOnError="false">
        <validCheckSum>true</validCheckSum>

        <sql dbms="postgresql">
            CREATE EXTENSION IF NOT EXISTS tablefunc;
            create extension IF NOT EXISTS unaccent;
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>

    <changeSet id="20230518213100" author="Matheus Miriani">
        <addColumn tableName="user">
            <column name="id" type="bigint"/>
            <column name="name" type="varchar(100)"/>
            <column name="document" type="varchar(11)"/>
            <column name="email" type="varchar"/>
            <column name="phone" type="varchar(13)"/>
            <column name="password" type="varchar"/>
            <column name="active_user" type="boolean"/>
        </addColumn>
        <addPrimaryKey tableName="user" columnNames="id"/>
    </changeSet>
    
    <changeSet id="20230518213700" author="Matheus Miriani">
        <createTable tableName="student">
            <column name="id" type="bigint"/>
        </createTable>
    </changeSet>
    
    <changeSet id="20230518213800" author="Matheus Miriani">
        <createTable tableName="schedule_time_configuration">
            <column name="id" type="uuid"/>
            <column name="day_of_week" type="varchar"/>
            <column name="start_time" type="time"/>
            <column name="end_time" type="time"/>
        </createTable>
        <addPrimaryKey tableName="schedule_time_configuration" columnNames="id"/>
    </changeSet>
    
    <changeSet id="20230518214000" author="Matheus Miriani">
        <createTable tableName="resource">
            <column name="id" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet id="20230518214100" author="Matheus Miriani">
        <createTable tableName="professional">
            <column name="id" type="bigint"/>
            <column name="user_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="professional" columnNames="id"/>

        <addForeignKeyConstraint baseTableName="professional" baseColumnNames="user_id"
                                 constraintName="professional_user_id_FK"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="20230518214400" author="Matheus Miriani">
        <createTable tableName="departament">
            <column name="id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="20230518214500" author="Matheus Miriani">
        <createTable tableName="attendance_period">
            <column name="id" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet id="20230518214500" author="Matheus Miriani">
        <createTable tableName="appointments">
            <column name="id" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
